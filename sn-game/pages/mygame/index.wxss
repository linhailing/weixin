.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 320rpx;
  background: #fff;
  position: relative;
}

.userinfo-login {
  width: 200rpx;
  height: 80rpx;
  margin: 0 auto;
  color: #e9f3f1;
  background-color: #01c0a0;
  position: absolute;
  top: 40%;
  border: none;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  left:50%; 
  top:10%; 
  margin-left: -70rpx;
  border-radius: 50%;
  position: absolute;
}

.userinfo-nickname {
  position: absolute;
  text-align: center;
  top: 60%;
  color: #aaa;
}

.userinfo-balance {
  position: absolute;
  top: 80%;
  left: 30%;
  font-size: 30rpx;
  color: #aaa;
}

.userinfo-balance-text {
  position: absolute;
  bottom: 0rpx;
  right: -150rpx;
  font-size: 28rpx;
  color: #f77d64;
  border-radius: 8rpx;
  border: 1rpx solid #f77d64;
  padding: 0px 15px 0px 15px;
}

/* 我的游戏 */

.my-games {
  position: relative;
  font-size: 30rpx;
  width: 100%;
  height: 320rpx;
  white-space: nowrap;
  background: #fff;
  box-shadow: #d3dbd9 1px 2px 1px 0px;
}

.my-games navigator {
  width: 180rpx;
  display: inline-block;
}

.my-games-text {
  position: absolute;
  top: 20rpx;
  left: 40rpx;
  font-weight: bold;
}

.my-games-list {
  position: absolute;
  top: 90rpx;
}

.my-scroll {
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
  margin-top: 78rpx;
}

.my-game-item {
  position: relative;
  width: 130rpx;
  height: 150rpx;
  float: left;
}

.game-item-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: relative;
  top: 20rpx;
  left: 30rpx;
}

.game-item-name {
  position: relative;
  top: 60rpx;
  left: -90rpx;
  color: #747474;
}

/* 联系我们 */

.contactus {
  position: relative;
  width: 100%;
  height: 154rpx;
  background: #fff;
  box-shadow: #d3dbd9 1px 2px 1px 0px;
  margin: 38rpx auto;
}

.contactus text {
  position: absolute;
  top: 55rpx;
  left: 40rpx;
  font-weight: bold;
}

.contactus image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 60rpx;
  right: 50rpx;
}
